{
  "compilerOptions": {
    "lib": ["ESNext"],
    "strict": true,
    // 服务端 不需要向后兼容
    "sourceMap": true,
    "target": "ESNext",
    "noImplicitAny": false,
    "outDir": "./dist",
    "module": "commonJS",
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
